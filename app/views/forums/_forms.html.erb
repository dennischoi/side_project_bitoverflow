<%= form_for @forum do |f| %>

  <div class="field">
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :description %><br/>
    <%= f.text_field :description %>
  </div>

  <div class="field">
    <%= f.label :post %><br/>
    <%= f.text_area :post %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
